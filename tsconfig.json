{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./dist/",
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@lib/*": [
          "./src/lib/*"
        ]
      },
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types",
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "./src/**/*",
      "./jest.config.js"
    ],
    "exclude": [
      "node_modules/**"
    ]
  }